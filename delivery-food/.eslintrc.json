{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": "warn",
        "react/prop-types": "off",
        "space-before-function-paren": "error",
        "space-in-parens": "error",
        "no-spaced-func": "error",
        "camelcase": "off",
        "no-empty-function": "error",
        "switch-colon-spacing": "error",
        "comma-spacing": "error"  
    }
}
